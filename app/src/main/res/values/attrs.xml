<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="InfiniteAutoScrollRecyclerView">
        <attr name="scrollOrientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="scrollLayoutType" format="enum">
            <enum name="list" value="1" />
            <enum name="grid" value="2" />
        </attr>
        <attr name="itemLeftMargin" format="integer"/>
        <attr name="itemRightMargin" format="integer"/>
        <attr name="itemTopMargin" format="integer"/>
        <attr name="itemBottomMargin" format="integer"/>
    </declare-styleable>
</resources>